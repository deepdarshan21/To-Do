<%- include("header"); -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">
    <% for(i in tasks){%>
    <div class="item">
        <input type="checkbox" name="" id="" />
        <p><%= tasks[i] %></p>
    </div>
    <%} %>
    <form class="item" action="/" method="POST">
        <input
            type="text"
            name="input"
            id="input"
            placeholder="What you want to do today"
            autofocus
            autocomplete="off"
        />
        <button type="submit" name="type" value= <%=listTitle%> >+</button>
    </form>
</div>

<%- include("footer"); -%>
